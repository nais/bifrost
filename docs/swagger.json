{
    "swagger": "2.0",
    "info": {
        "description": "API for managing Unleash (feature flag) instances\nThis service provides a JSON API for creating, updating, and deleting Unleash instances.",
        "title": "Bifrost API",
        "contact": {
            "name": "NAIS Team",
            "url": "https://github.com/nais/bifrost"
        },
        "license": {
            "name": "MIT",
            "url": "https://github.com/nais/bifrost/blob/main/LICENSE"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/v1/releasechannels": {
            "get": {
                "description": "Returns a list of all available release channels for Unleash version management",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "release-channels"
                ],
                "summary": "List all release channels",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/handlers.ReleaseChannelResponse"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/v1/releasechannels/{name}": {
            "get": {
                "description": "Returns details of a specific release channel",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "release-channels"
                ],
                "summary": "Get a release channel by name",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Release channel name",
                        "name": "name",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handlers.ReleaseChannelResponse"
                        }
                    },
                    "404": {
                        "description": "Release channel not found",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/v1/unleash": {
            "get": {
                "description": "Returns a list of all Unleash feature flag server instances",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "unleash-v1"
                ],
                "summary": "List all Unleash instances",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/dto.UnleashListResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    }
                }
            },
            "post": {
                "description": "Creates a new Unleash feature flag server instance with database and credentials",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "unleash-v1"
                ],
                "summary": "Create a new Unleash instance",
                "parameters": [
                    {
                        "description": "Unleash instance configuration",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.UnleashConfigRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/dto.UnleashInstanceResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid request or validation error",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/v1/unleash/{name}": {
            "get": {
                "description": "Returns details of a specific Unleash instance",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "unleash-v1"
                ],
                "summary": "Get Unleash instance by name",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Instance name",
                        "name": "name",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/dto.UnleashInstanceResponse"
                        }
                    },
                    "404": {
                        "description": "Instance not found",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    }
                }
            },
            "put": {
                "description": "Updates configuration of an existing Unleash instance. Preserves federation settings if not specified.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "unleash-v1"
                ],
                "summary": "Update an existing Unleash instance",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Instance name",
                        "name": "name",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Updated Unleash configuration",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.UnleashConfigRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/dto.UnleashInstanceResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid request or validation error",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Instance not found",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    }
                }
            },
            "delete": {
                "description": "Deletes an existing Unleash instance and its associated database and credentials",
                "tags": [
                    "unleash-v1"
                ],
                "summary": "Delete an Unleash instance",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Instance name",
                        "name": "name",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Successfully deleted"
                    },
                    "404": {
                        "description": "Instance not found",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "dto.UnleashConfigRequest": {
            "type": "object",
            "properties": {
                "allowed_clusters": {
                    "type": "string"
                },
                "allowed_namespaces": {
                    "type": "string"
                },
                "allowed_teams": {
                    "type": "string"
                },
                "custom_version": {
                    "type": "string"
                },
                "database_pool_idle_timeout_ms": {
                    "type": "integer"
                },
                "database_pool_max": {
                    "type": "integer"
                },
                "enable_federation": {
                    "type": "boolean"
                },
                "log_level": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "release_channel_name": {
                    "type": "string"
                }
            }
        },
        "dto.UnleashInstanceResponse": {
            "type": "object",
            "properties": {
                "age": {
                    "type": "string"
                },
                "api_url": {
                    "type": "string"
                },
                "channel_name_from_status": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "custom_version": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "namespace": {
                    "type": "string"
                },
                "release_channel_name": {
                    "type": "string"
                },
                "resolved_image": {
                    "description": "Read-only status",
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "status_label": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "version_source": {
                    "description": "Version source",
                    "type": "string"
                },
                "web_url": {
                    "type": "string"
                }
            }
        },
        "dto.UnleashListResponse": {
            "type": "object",
            "properties": {
                "count": {
                    "type": "integer"
                },
                "instances": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/dto.UnleashInstanceResponse"
                    }
                }
            }
        },
        "handlers.ErrorResponse": {
            "type": "object",
            "properties": {
                "details": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "error": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                },
                "status_code": {
                    "type": "integer"
                }
            }
        },
        "handlers.ReleaseChannelResponse": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "current_version": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "last_updated": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "schedule": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            }
        }
    }
}